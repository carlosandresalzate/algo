{
	"bracketSpacing": true,
	"proseWrap": "always",
	"trailingComma": "es5",
	"endOfLine": "lf",
	"overrides": [
		{
			"files": "*.css",
			"options": {
				"arrowParens": "always",
				"bracketSpacing": true,
				"htmlWhitespaceSensitivity": "css",
				"insertPragma": false,
				"jsxSingleQuote": false,
				"proseWrap": "preserve",
				"quoteProps": "as-needed",
				"requirePragma": false,
				"semi": true,
				"singleQuote": false,
				"tabWidth": 4,
				"vueIndentScriptAndStyle": true
			}
		},
		{
			"files": [
				"*.js",
				"*.json",
				".prettierrc"
			],
			"options": {
				"parser": "json",
				"arrowParens": "always",
				"bracketSpacing": true,
				"htmlWhitespaceSensitivity": "css",
				"insertPragma": false,
				"jsxSingleQuote": true,
				"printWidth": 80,
				"proseWrap": "preserve",
				"quoteProps": "as-needed",
				"requirePragma": false,
				"semi": true,
				"singleQuote": true,
				"tabWidth": 2,
				"trailingComma": "es5",
				"useTabs": false,
				"vueIndentScriptAndStyle": false
			}
		}
	]
}
